{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "declarationDir": "./types",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "types", "src/core/**/*.ts"]
}
